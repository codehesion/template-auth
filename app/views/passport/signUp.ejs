<% include ../partials/header.ejs %>

<div class="viewport-container">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8 ml-md-auto mr-md-auto col-lg-6">

                <div class="card mt-3">
                    <div class="card-body">
                        <h3 class="card-title text-center">Sign Up</h3>
                        <h5 class="card-subtitle text-center text-muted mb-3">create a new account</h5>
                        
                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show text-center">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>                                
                                <%= message %>
                            </div>
                        <% } %>

                        <form method="post">
                            <div class="form-group">
                                <label for="email">Username</label>
                                <input 
                                    type="text" 
                                    class="form-control" 
                                    name="username"
                                    placeholder="username" 
                                >
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    name="password"
                                    placeholder="password" 
                                >
                            </div>
                            <div class="form-group text-center mt-5">
                                <button type="submit" class="btn btn-success">Sign Up</button>
                            </div>    
                        </form>

                        <p class="card-text text-center mt-4">Already have an account? <a href="/sign-in" class="btn btn-sm btn-primary">Sign In</a></p>

                    </div><!-- .card-body -->
                </div><!-- .card -->    

            </div><!-- .col -->
        </div><!-- .row -->
    </div><!-- .container-fluid -->
</div><!-- .viewport-container -->    

<% include ../partials/footer.ejs %>